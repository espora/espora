<%
	# Panel para las tabs del workspace del terapeuta
	@therapist_active_tab = 2

	# Panel para las tabs del workspace del havad
	@havad_active_tab = 0
%>

<% content_for :fosti do %>
	<table class="pure-table pure-table-bordered">
		<thead>
			<tr>
				<th>NOMBRE</th>
				<th>EDAD</th>
				<th>CARRERA</th>
				<th>SEMESTRE</th>
				<th>TELÉFONO</th>
				<th>NÚMERO DE SESIONES</th>
				<th>FECHA DE ADMISIÓN</th>
				<th>ELEGIR ALUMNO</th>
			</tr>
		</thead>

		<tbody>
			<% @patient_records.each do | record | %>
			<% patient = record.patient %>
				<tr class="pure-table-odd" align="center">
					<td align="left"><%= patient.full_name %></td>
					<td><%= patient.age %></td>
					<td><%= Patient::NAME_CAREER[patient.career] %></td>
					<td><%= patient.semester %></td>
					<td><%= patient.telephone1 %></td>
					<td><%= record.appointments.count %></td>
					<td><%= patient.patient_request.updated_at.strftime("%d-%m-%y") %></td>
					<td>
						<%= link_to choose_record_path(patient) do %>
							<i class="fa fa-arrow-right"></i>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>

<%= render template: "patient_records/havad_tab" %>