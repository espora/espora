<!-- OPCIONES -->
<div id="reasonsOpts">
	<% reasons_types = PersonalAreaType.all %>
	<% reasons_types.each do | affarea | %>

		<div style="width: 50%; float: left; margin-top: 7px; height: 16px;">
			<input type="checkbox" id-area="<%= affarea.id %>" area="<%= affarea.name %>" onclick="changeAffectedArea(this);" >
				<div style="display: inline-block; position: relative; top: -3px; left: 3px;">
					<%= affarea.name %>
				</div>

				<% if affarea.is_other? %>
					<input type="text" style="display: inline-block; position: relative; top: -3px; left: 8px;" autofocus="autofocus" size="10" disabled />
				<% end %>
			</input>
		</div>
	<% end %>
</div>