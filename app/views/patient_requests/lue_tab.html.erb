<% content_for :lue_tab do %>

	<!-- WORKSPACE LUE -->
	<div id="lue-tab">

		<!-- PESTANAS -->
		<ul>
			<li><a href="#consultar">Consultar Solicitudes</a></li>
			<li><a href="#nuevo">Nueva Solicitud</a></li>
		</ul>

		<!-- PANELES -->
		<div id="consultar" class="ter-panel">
			<%= yield(:lue) if content_for?(:lue) %>
		</div>
		<div id="nuevo" class="ter-panel">
			<%= yield(:lue_new) if content_for?(:lue_new) %>
		</div>
		
	</div>

	<script type="text/javascript">
		$( "#lue-tab" ).tabs({
			active: parseInt("<%= @lue_active_tab %>"),
			beforeActivate: function( event, ui ) {

				// Siguiente panel
				var newPanel = ui.newPanel;
				var newPanelId = newPanel.attr("id");

				// PANEL AL WORKSPACE

				// Lista
				if(newPanelId === "consultar") {
					window.location = "<%= lue_index_path %>";
				}

				// Nuevo
				if(newPanelId === "nuevo") {
					window.location = "<%= new_patient_request_path %>";
				}
			}
		});
	</script>
<% end %>