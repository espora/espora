<div style="min-height: 500px;">
	<%= form_for(therapist, url: create_therapists_path,  remote: true, :html => { :class => "pure-form pure-form-stacked" }) do |f| %>

		<div class="form-inputs" style="width: 100%;">
			<div>
				<%= f.label :p_last_name do %>Apellido Paterno: <% end %>
				<%= f.text_field :p_last_name, autofocus: true, :size => 100 %>
			</div>

			<div>
				<%= f.label :m_last_name do %>Apellido Materno: <% end %>
				<%= f.text_field :m_last_name, autofocus: true, :size => 100 %>
			</div>

			<div>
				<%= f.label :names do %>Nombre(s): <% end %>
				<%= f.text_field :names, autofocus: true, :size => 100 %>
			</div>
		</div>

		<div class="form-inputs" style="width: 48.5%;">
			<div>
				<%= f.label :telephone1 do %>Telefono: <% end %>
				<%= f.text_field :telephone1, autofocus: true %>
			</div>

			<div>
				<%= f.label :telephone2 do %>Celular: <% end %>
				<%= f.text_field :telephone2, autofocus: true %>
			</div>
		</div>

		<div class="form-inputs" style="width: 48.5%; margin-left: 10px;">
			<div>
				<%= f.label :email %>
				<%= f.email_field :email, autofocus: true %>
			</div>

			<div>
				<%= f.label :password %>
				<%= f.password_field :password, autocomplete: "off" %>
			</div>

			<div>
				<%= f.label :password_confirmation do %>Confirme password:<% end %>
				<%= f.password_field :password_confirmation, autocomplete: "off" %>
			</div>
		<div>
	<% end %>
</div>