
<div style="font: 65% 'Trebuchet MS', sans-serif; margin: 50px;">

	<!-- LOGO -->
	<div>
		<%= image_tag("Espora.png", :class => "ter-logo") %>
	</div>

	<!-- WORKSPACE TERAPEUTA -->
	<div id="ter-tabs">
		
		<!-- OPCIONES PESTAÃ‘A -->
		<ul>
			<li><a href="#perfil">Perfil</a></li>
			<li><a href="#lue">LUE</a></li>
			<li><a href="#fie">FIE</a></li>
			<li><a href="#fosti">FOSTI</a></li>
			<li><a href="#havad">HAVAD</a></li>
			<% if current_therapist.role == "Coordinator" %>
				<li><a href="#add_therapist">Registra Terapeuta</a></li>
			<% end %>

			<!-- SALIR -->
			<div id="ter-logout">
				<%= link_to destroy_therapist_session_path, method: :delete do %>SALIR<% end %>
			</div>
		</ul>

		<!-- PERFIL -->
		<div id="perfil"></div>

		<!-- LUE PANEL -->
		<div id="lue"></div>

		<div id="fie">
			<div id="fie-tab">
				<ul>
					<li>
						<a href="#consultar-fie">Consultar</a>
					</li>
				</ul>
				<div id="consultar-fie">Lista de pacientes</div>
			</div>
		</div>

		<div id="fosti">
			Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
		</div>

		<div id="havad">
			Phasellus mattis tincidunt nibh. Cras orci urna, blandit id, pretium vel, aliquet ornare, felis. Maecenas scelerisque sem non nisl. Fusce sed lorem in enim dictum bibendum.
		</div>

		<% if current_therapist.role == "Coordinator" %>
		<div id="add_therapist">
		</div>
		<% end %>
	</div>
</div>

<script type="text/javascript">

	$(document).ready(function() {
		$( "#ter-tabs" ).tabs({
			beforeActivate: function( event, ui ) {

				// Siguiente panel
				var newPanel = ui.newPanel;

				// PANEL AL WORKSPACE

				// Perfil
				if( newPanel.attr( "id" ) == "perfil" ) {
					loadPanel( "<%= therapist_profile_path(current_therapist.id) %>", newPanel );
				}

				// LUE
				if( newPanel.attr( "id" ) == "lue" ) {
					loadPanel( "<%= patient_requests_index_path %>", newPanel );
				}

				// Agregar terapeuta
				if( newPanel.attr( "id" ) == "add_therapist" ) {
					loadPanel( "<%= new_therapist_path %>", newPanel );
				}
			},
			create: function( event, ui ) {

				// Por default pone el perfil
				loadPanel( "<%= therapist_profile_path(current_therapist.id) %>", $("#perfil") );
			}
		});

		$( "#fie-tab" ).tabs();
	});
</script>